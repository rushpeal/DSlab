    -d \
    -v "$(pwd)"/hazelcast.xml:/opt/hazelcast/hazelcast.xml \
    -e HAZELCAST_CONFIG=hazelcast.xml \
    --name QUEUEONE \
    --network hazelcast-network-1 \
    -e HZ_CLUSTERNAME=dev \
